<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AlexanderKrasowski's Homepage</title>
    @Styles.Render("~/Content/bootstrap.css")
    @Scripts.Render("~/bundles/modernizr")
   
    <script src="~/Scripts/modernizr-2.8.3.js")" type="text/javascript"></script>
</head>
<Style>
    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #4E7701;
    }

    li {
        float: left;
    }

        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 120%;
        }

            li a:hover {
                background-color: #4E7701;
            }
</Style>
<body style="margin:2px;padding:2px">
    <div id="header">



        <ul id="navlist">
            <li class="first">
                <a href="/" id="current">Home</a>
            </li>
            <li><a href="/Home/About/">About</a></li>
            <li><a href="/Home/Contact/">Contact</a></li>
            <li><a href="/Home/Projects/">Projects</a></li>
            <img src="~/Content/Images/download.png" / height = "100" width = "150" align = "right">
        </ul>
    </div>
    
        @RenderBody()
    
    <br />
    <br />

    <footer>

        <p>&copy; @DateTime.Now.Year - www.AlexanderKrasowski.com</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
